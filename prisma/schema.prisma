generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


// Define your database schema here

enum Role {
  ADMIN
  USER
  MODERATOR
}

model Account {
  id                 String  @id @default(cuid())
  userId             String     @map("user_id")
  type               String
  provider           String
  providerAccountId  String  @map("provider_account_id")
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
  @@map("accounts")
}
 
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String      @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@map("sessions")
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
  @@map("verification_tokens")
}


model User {
  id        String      @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile   Profile?
  credits   Credit?
  accounts      Account[]
  sessions      Session[]
  usages    Usage[]
  projects  Project[]
  // aiGenerations    AIGeneration[]
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String?
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Credit {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String      @unique
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt
}

model Usage {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  action    String   // "AI_PROMPT"
  cost      Int
  createdAt DateTime @default(now())
}

enum ProjectStage {
  IDEATION
  DECISION_MATRIX
  DECISION_MATRIX_COMPLETE
  BLUEPRINT
  BLUEPRINT_COMPLETE
  BUILDING
  COMPLETED
}

model Project {
  id          Int           @id @default(autoincrement())
  userId      String
  
  title       String
  concept String?
  goals       String[]    @default([])
  stage       ProjectStage  @default(IDEATION)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  research  String[]

  user              User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  problems_overall ProblemOverall[]
  subsystems        Subsystem[]
  decisions         ProjectDecision[]

  blueprint         BlueprintResult?
  buildGuide        BuildGuide?

  @@index([userId])
  @@index([userId, stage])
  @@map("projects")
}


model ProblemOverall {
  id Int @id @default(autoincrement())
  projectId Int
  problem String
  suggested_solution String

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
model Subsystem {
  id          Int     @id @default(autoincrement())
  projectId   Int
  order       Int     @default(0)
  createdAt   DateTime @default(now())
  
  name        String
  // description String?
  inputFrom String[]
  outputTo  String[]
  

  project     Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  options     SubsystemOption[]
  decisions   ProjectDecision[]

  @@index([projectId])
  @@map("subsystems")
}

model SubsystemOption {
  id              Int       @id @default(autoincrement())
  subsystemId     Int
  
  name            String
  features        String[]
  // description     String    @db.Text
  why_it_works      String    @db.Text
  
  pros            String[]
  cons            String[]
  estimated_cost   String
  availability    String

  
  createdAt       DateTime  @default(now())

  subsystem       Subsystem        @relation(fields: [subsystemId], references: [id], onDelete: Cascade)
  decisions       ProjectDecision[]

  @@index([subsystemId])
  @@map("subsystem_options")
}

model ProjectDecision {
  id                Int       @id @default(autoincrement())
  projectId         Int
  subsystemId       Int
  selectedOptionId  Int
  
  decidedAt         DateTime  @default(now())

  project         Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  subsystem       Subsystem       @relation(fields: [subsystemId], references: [id], onDelete: Cascade)
  selectedOption  SubsystemOption @relation(fields: [selectedOptionId], references: [id], onDelete: Cascade)

  @@unique([projectId, subsystemId])
  @@index([projectId])
  @@map("project_decisions")
}


model Problem {
  id Int @id @default(autoincrement())
  blueprintId  Int @unique
  statment String
  constraints String[]
  blueprint    BlueprintResult @relation(fields: [blueprintId], references: [id], onDelete: Cascade)
}

model Architecture {
  id Int @id @default(autoincrement())
  blueprintId  Int @unique
  overview String
  block_diagram String[]
  blueprint    BlueprintResult @relation(fields: [blueprintId], references: [id], onDelete: Cascade)
}

model Testing {
  id Int @id @default(autoincrement())
  blueprintId  Int @unique
  methods String[]
  success_criteria String
  blueprint    BlueprintResult @relation(fields: [blueprintId], references: [id], onDelete: Cascade)
}
model BlueprintResult {
  id                  Int       @id @default(autoincrement())
  projectId           Int       @unique


  executionSteps      String[]
  references          String[]
  extensions           String[]
  cost String
  skills String[]
  testing Testing?
  
  generatedAt         DateTime  @default(now())
  expiresAt           DateTime  @default(dbgenerated("now() + INTERVAL '90 days'"))

  project             Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  architecture        Architecture?
  problem             Problem?  
  buildGuides         BuildGuide[]

  @@index([projectId])
  @@map("blueprint_results")
}

model Prerequisite {
  id Int @id @default(autoincrement())
  buildGuideId Int @unique
  tools String[]
  materials String[]

  buildGuide BuildGuide @relation(fields: [buildGuideId], references: [id], onDelete: Cascade)
}

model Wiring {
  id Int @id @default(autoincrement())
  buildGuideId Int @unique
  description String @db.Text
  connections String[]

  buildGuide BuildGuide @relation(fields: [buildGuideId], references: [id], onDelete: Cascade)
}

model Firmware {
  id Int @id @default(autoincrement())
  buildGuideId Int @unique
  language String @db.Text
  structure String[] @db.Text
  key_logic String[] @db.Text

  buildGuide BuildGuide @relation(fields: [buildGuideId], references: [id], onDelete: Cascade)
}

model BuildTesting {
  id Int @id @default(autoincrement())
  buildGuideId Int @unique

  unit String @db.Text
  integration String[] @db.Text
  acceptance String[] @db.Text

  buildGuide BuildGuide @relation(fields: [buildGuideId], references: [id], onDelete: Cascade)

}

model CommonFailures {
  id Int @id @default(autoincrement())
  buildGuideId Int @unique

  issue String @db.Text
  cause String @db.Text
  fix   String @db.Text

  buildGuide BuildGuide @relation(fields: [buildGuideId], references: [id], onDelete: Cascade)
}

model BuildGuide {
  id                  Int       @id @default(autoincrement())
  projectId           Int       @unique
  blueprintId         Int


  build_overview            String    @db.Text
  prerequisites       Prerequisite?

  wiring  Wiring?
  firmware Firmware?
  calibration    String[]
  testing BuildTesting?
  common_failures CommonFailures[]
  safety  String[]
  next_steps  String[]
  
  generatedAt         DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  project             Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  blueprint           BlueprintResult @relation(fields: [blueprintId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("build_guides")
}
