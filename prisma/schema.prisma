model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
  @@map("verification_tokens")
}


model User {
  id        String      @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      Role     @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile   Profile?
  credits   Credit?
  accounts      Account[]
  sessions      Session[]
  usages    Usage[]
  projects  Project[]
  aiGenerations    AIGeneration[]
}

model Profile {
  id     Int    @id @default(autoincrement())
  bio    String?
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

model Credit {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String      @unique
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt
}

model Usage {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  action    String   // "AI_PROMPT"
  cost      Int
  createdAt DateTime @default(now())
}

enum ProjectStage {
  IDEATION
  DECISION_MATRIX
  DECISION_MATRIX_COMPLETE
  BLUEPRINT
  BLUEPRINT_COMPLETE
  BUILDING
  COMPLETED
}

model Project {
  id          Int           @id @default(autoincrement())
  userId      String
  
  title       String
  description String?
  stage       ProjectStage  @default(IDEATION)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user              User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  subsystems        Subsystem[]
  decisions         ProjectDecision[]
  aiGenerations    AIGeneration[]
  researchEntries  ProjectResearch[]
  decisionMatrix    DecisionMatrixResult?
  blueprint         BlueprintResult?
  buildGuide        BuildGuide?

  @@index([userId])
  @@map("projects")
}

model Subsystem {
  id          Int     @id @default(autoincrement())
  projectId   Int
  
  name        String
  description String?
  order       Int     @default(0)
  
  createdAt   DateTime @default(now())

  project     Project              @relation(fields: [projectId], references: [id], onDelete: Cascade)
  options     SubsystemOption[]
  decisions   ProjectDecision[]

  @@index([projectId])
  @@map("subsystems")
}

model SubsystemOption {
  id              Int       @id @default(autoincrement())
  subsystemId     Int
  
  name            String
  description     String    @db.Text
  whyItWorks      String    @db.Text
  
  pros            String[]
  cons            String[]
  estimatedCost   String
  availability    String
  
  imageUrl        String?
  datasheet       String?
  
  createdAt       DateTime  @default(now())

  subsystem       Subsystem        @relation(fields: [subsystemId], references: [id], onDelete: Cascade)
  decisions       ProjectDecision[]

  @@index([subsystemId])
  @@map("subsystem_options")
}

model ProjectDecision {
  id                Int       @id @default(autoincrement())
  projectId         Int
  subsystemId       Int
  selectedOptionId  Int
  
  decidedAt         DateTime  @default(now())

  project         Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  subsystem       Subsystem       @relation(fields: [subsystemId], references: [id], onDelete: Cascade)
  selectedOption  SubsystemOption @relation(fields: [selectedOptionId], references: [id], onDelete: Cascade)

  @@unique([projectId, subsystemId])
  @@index([projectId])
  @@map("project_decisions")
}

model DecisionMatrixResult {
  id              Int       @id @default(autoincrement())
  projectId       Int       @unique
  

  projectTitle    String?
  concept         String?
  problemsOverall Json?
  skillsRequired  String?
  
  generatedAt     DateTime  @default(now())
  expiresAt       DateTime  @default(dbgenerated("now() + INTERVAL '30 days'"))

  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("decision_matrix_results")
}

model BlueprintResult {
  id                  Int       @id @default(autoincrement())
  projectId           Int       @unique

  architecture        String?
  blockDiagram        Json?
  estimatedTotalCost  String?
  requiredSkills      String[]
  executionSteps      String[]
  
  generatedAt         DateTime  @default(now())
  expiresAt           DateTime  @default(dbgenerated("now() + INTERVAL '90 days'"))

  project             Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  buildGuides         BuildGuide[]
  blockDiagramNodes  BlockDiagramNode[]

  @@index([projectId])
  @@map("blueprint_results")
}

model BuildGuide {
  id                  Int       @id @default(autoincrement())
  projectId           Int       @unique
  blueprintId         Int

  wiringInstructions  String    @db.Text
  codeStructure       String    @db.Text
  calibrationSteps    String[]
  testingProcedures   String[]
  commonFailureModes  String[]
  
  generatedAt         DateTime  @default(now())
  updatedAt           DateTime  @updatedAt

  project             Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  blueprint           BlueprintResult @relation(fields: [blueprintId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("build_guides")
}
model ProjectResearch {
  id          Int      @id @default(autoincrement())
  projectId   Int
  source      String   @db.Text
  stage       String
  createdAt   DateTime @default(now())
  
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
  @@map("project_research")
}

model AIGeneration {
  id              Int      @id @default(autoincrement())
  projectId       Int
  userId          String
  stage           String
  status          String
  tokensUsed      Int?
  cost            Int?
  errorMessage    String?  @db.Text
  generatedAt     DateTime @default(now())
  
  project         Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([projectId, stage])
  @@index([userId, generatedAt])
  @@map("ai_generations")
}

model BlockDiagramNode {
  id          Int      @id @default(autoincrement())
  blueprintId Int
  name        String
  order       Int
  
  blueprint   BlueprintResult @relation(fields: [blueprintId], references: [id], onDelete: Cascade)
  
  @@index([blueprintId])
  @@map("block_diagram_nodes")
}